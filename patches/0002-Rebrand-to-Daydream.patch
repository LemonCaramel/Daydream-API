From: LemonCaramel <admin@caramel.moe>
Date: Thu, 5 Aug 2021 15:44:59 +0900
Subject: [PATCH] Rebrand to Daydream


diff --git a/build.gradle.kts b/build.gradle.kts
index 92b612126a6bac0b89198a92bbb73b742ec9d064..a70ae9269da647d050bf87ee8860f6e4062f47f9 100644
--- a/build.gradle.kts
+++ b/build.gradle.kts
@@ -39,6 +39,7 @@ dependencies {
     apiAndDocs("net.kyori:adventure-text-serializer-plain")
     api("org.apache.logging.log4j:log4j-api:2.14.1") // Paper
     api("org.slf4j:slf4j-api:1.7.30") // Paper
+    api("net.kyori:adventure-text-minimessage:4.1.0-SNAPSHOT") // Daydream
 
     implementation("org.ow2.asm:asm:9.1")
     implementation("org.ow2.asm:asm-commons:9.1")
@@ -95,6 +96,7 @@ tasks.withType<Javadoc> {
         .ignoreEmptyDirectories()
         .withPropertyName(apiAndDocs.name + "-configuration")
     doFirst {
+        options.encoding = "UTF-8" // Daydream
         (options as CoreJavadocOptions).addStringOption(
             "sourcepath",
             apiAndDocs.resolvedConfiguration.files.joinToString(separator = File.pathSeparator, transform = File::getPath)
diff --git a/src/main/java/org/bukkit/NamespacedKey.java b/src/main/java/org/bukkit/NamespacedKey.java
index 01bcb3a1bdb5accdf844d0178cec3d25746b3eaa..ed6c7819c5c42e4259acc11f188595b7e09941a6 100644
--- a/src/main/java/org/bukkit/NamespacedKey.java
+++ b/src/main/java/org/bukkit/NamespacedKey.java
@@ -29,7 +29,7 @@ public final class NamespacedKey implements net.kyori.adventure.key.Key, com.des
      * The namespace representing all keys generated by Bukkit for backwards
      * compatibility measures.
      */
-    public static final String BUKKIT = "bukkit";
+    public static final String BUKKIT = "daydream"; // Daydream
     //
     private static final Pattern VALID_NAMESPACE = Pattern.compile("[a-z0-9._-]+");
     private static final Pattern VALID_KEY = Pattern.compile("[a-z0-9/._-]+");
