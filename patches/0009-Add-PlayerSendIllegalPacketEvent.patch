+package moe.caramel.daydream.event.packet;
+
+import org.bukkit.entity.Player;
+import org.bukkit.event.HandlerList;
+import org.bukkit.event.player.PlayerEvent;
+import org.jetbrains.annotations.ApiStatus;
+import org.jetbrains.annotations.NotNull;
+import org.jetbrains.annotations.Nullable;
+
+/**
+ * 플레이어가 잘못된 패킷을 서버에 전송했을 때 호출됩니다.
+ */
+public final class PlayerSendIllegalPacketEvent extends PlayerEvent {
+
+    private static final HandlerList HANDLER_LIST = new HandlerList();
+    public @NotNull HandlerList getHandlers() { return HANDLER_LIST; }
+    public static @NotNull HandlerList getHandlerList() { return HANDLER_LIST; }
+
+    private final Action action;
+    private final String value;
+
+    @ApiStatus.Internal
+    public PlayerSendIllegalPacketEvent(final @NotNull Player player, final @NotNull Action action, final @Nullable String value) {
+        super(player);
+        this.action = action;
+        this.value = value;
+    }
+
+    /**
+     * 잘못된 패킷 타입을 가져옵니다.
+     *
+     * @return 잘못된 패킷 타입
+     */
+    @NotNull
+    public Action getAction() {
+        return action;
+    }
+
+    /**
+     * 패킷에 데이터가 포함될 수 있는 경우, 데이터를 가져옵니다.
+     *
+     * @return 패킷 데이터
+     */
+    @Nullable
+    public String getValue() {
+        return value;
+    }
+
+    /**
+     * 패킷 타입 목록
+     */
+    public enum Action {
+        /**
+         * Difficulty Change 패킷
+         *
+         * 일반적인 클라이언트에서는 보낼 수 없음
+         */
+        DIFFICULTY_CHANGE,
+        /**
+         * Difficulty Lock 패킷
+         *
+         * 일반적인 클라이언트에서는 보낼 수 없음
+         */
+        DIFFICULTY_LOCK,
+        /**
+         * 비정상적인 Tab Complete 요청이 들어올 경우
+         *
+         * 일반적인 클라이언트에서는 보낼 수 없음 (채팅 클라이언트 주의)
+         */
+        TAB_COMPLETE,
+        /**
+         * 비정상적인 움직임 값이 수신될 경우
+         */
+        MOVE
+    }
+}
