+    public static ItemStack create(final @NotNull Material type, final @NotNull java.util.function.Consumer<? super ItemMeta> consumer) {
+        final ItemStack item = ItemStack.of(type);
+        item.editMeta(consumer);
+        return item;
+    }
+
